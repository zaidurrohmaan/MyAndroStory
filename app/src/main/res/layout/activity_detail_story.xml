<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.DetailStoryActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_photos_detail"
            android:layout_width="380dp"
            android:layout_height="380dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            android:transitionName="trans_iv_photos"
            tools:src="@tools:sample/backgrounds/scenic"
            android:contentDescription="@string/gambar_cerita"/>

        <TextView
            android:id="@+id/tv_name_detail"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_photos_detail"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:transitionName="trans_tv_name"
            tools:text="Zaidurrohman" />

        <TextView
            android:id="@+id/tv_desc_detail"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_name_detail"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            tools:text="Selamat pagi semua! Semoga kalian selalu sehat, ya!" />

        <TextView
            android:id="@+id/tv_date_detail"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_desc_detail"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:transitionName="trans_tv_date"
            tools:text="16 Nov 2023" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>